<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccentDark1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark1</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:statusBarColor"> @android:color/transparent</item>
    </style>

    <style name="AppThemeDate">
        <item name="backgroundColor"> @color/colorAccentLight</item>
    </style>

    <style name="CityApp">
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyleTextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">bold</item>
        <item name= "android:textColor">@android:color/white</item>
    </style>

    <style name ="ButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp </item>
        <item name="android:layout_marginTop">1dp </item>
        <item name="android:layout_marginEnd">10dp </item>
        <item name="android:textStyle">italic</item>
        <item name= "android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/buttom_rounded</item>
    </style>

    <style name ="RadioButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp </item>
        <item name="android:buttonTint"> @color/colorAccentLight</item>
    </style>




</resources>