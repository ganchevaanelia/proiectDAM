                />
            <TextView
                android:id="@+id/tvRatingBarValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tvParereDetalii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

